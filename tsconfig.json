{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "dom"],
    "target": "es5",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ]
}
